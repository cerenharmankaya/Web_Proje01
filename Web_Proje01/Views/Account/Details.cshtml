@model Web_Proje01.Models.OrderDetails

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="span12">


        <div class="well well-small">

            <table class="table table-bordered table-condensed">
                <thead>
                    <tr>
                        <th>Sipariş ID</th>
                        <th>Sipariş Numarası</th>
                        <th>Sipariş Tarihi</th>
                        <th>Toplam Tutar TL</th>
                        <th>Sipariş Durumu</th>
                        <th>Adres</th>

                        <th></th>
                    </tr>
                </thead>
                
                <tr>
                    <td>@Model.OrderId</td>
                    <td>@Model.OrderNumber</td>
                    <td>@Model.OrderDate</td>
                    <td>@Model.Total</td>
                    <td>
                        @if (Model.OrderState == Web_Proje01.Entity.OrderState.Bekleniyor)
                        {
                            <a class="btn btn-danger">Sipariş Bekleniyor</a>
                        }
                        else if (Model.OrderState == Web_Proje01.Entity.OrderState.Tamamlandı)
                        {
                            <a class="btn btn-success">Sipariş Tamamlandı</a>
                        }
                        else if (Model.OrderState == Web_Proje01.Entity.OrderState.Paketlendi)
                        {
                            <a class="btn btn-info">Sipariş Paketlendi</a>
                        }
                        else if (Model.OrderState == Web_Proje01.Entity.OrderState.Kargolandı)
                        {
                            <a class="btn btn-primary">Sipariş Kargolandı</a>
                        }
                    </td>
                    <td>@Model.Adres <br/> 
                        @Model.Sehir <br/>
                        @Model.Semt <br/>
                        @Model.Mahalle <br/>
                        @Model.PostaKodu <br/>

                    </td>
                </tr>
                 


                
            </table><br>



            <table class="table table-bordered table-condensed">
                <thead>
                    <tr>
                        <th>Resim</th>
                        <th>Ürün Adı</th>
                        <th>Toplam Tutar TL</th>
                        <th>Adet</th>

                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.OrderLines)
                    {
                        <tr>
                            <td><img src="~/Content/Image/@item.Image" height="75" width="75"/></td>
                            <td>@item.ProductName</td>
                            <td>@item.Price</td>
                            <td>@item.Quantity</td>
                            <td><a href="/Home/ProductDetails/@item.ProductId" class="btn btn-success" target="_blank">Ürün Detay</a></td>
                        </tr>
                    }


                </tbody>
            </table><br>






        </div>
    </div>
</div>

