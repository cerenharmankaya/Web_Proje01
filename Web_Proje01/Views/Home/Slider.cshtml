@using Web_Proje01.Entity
@model IEnumerable<Product>


<div id="myCarousel" class="carousel slide homCar">
    <div class="carousel-inner">
        <div class="item active">
            <img style="width:100%" src="assets/img/bootstrap_free-ecommerce.png" alt="bootstrap ecommerce templates">
            <div class="carousel-caption">
                <h4>Bootstrap shopping cart</h4>
                <p><span>Very clean simple to use</span></p>
            </div>
        </div>
        @foreach (var item in Model)
        {
            <div class="item">
                <a href="/Home/ProductDetails/@item.Id"> <img style="width: 100%" src="~/Content/Image/@item.image" alt="bootstrap templates"></a>
                <div class="carousel-caption">
                    <h4>@item.Name</h4>
                    <p><span>@item.Price TL</span></p>
                </div>
            </div>

        }

    </div>
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">‹</a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">›</a>
</div>
